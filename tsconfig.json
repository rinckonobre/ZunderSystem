{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    
    "lib": [
      "ESNext"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@base/*": ["./src/app/base/*"],
      "@/functions/*": ["./src/app/functions/*"],
      "@/classes/*": ["./src/app/classes/*"],
      "@/interfaces/*": ["./src/app/interfaces/*"],
      "@/manages/*": ["./src/app/manages/*"],
      "@/structs/*": ["./src/app/structs/*"],
      "@/tasks/*": ["./src/app/tasks/*"],
      "@/config/*": ["./src/config/*"]

    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "firebase.json"
  ]
}